                         $('#withdrawalPage .Loading').hide(); // Hide loading on error
                    }
                },
                error: function(jqXHR, textStatus, errorThrown) {
                     console.error("Withdrawal AJAX Error:", textStatus, errorThrown);
                     $('#withdrawalRecordList').html('<div class="van-list__error-text">Failed to load withdrawal records. Please try again.</div>');
                     $('#withdrawalPage .Loading').hide(); // Hide loading on error
                }
                // No 'complete' needed here as success/error handle hiding the loader
            });

            $('.content-wrapper').on('click', '.order', function (e) {
                 e.preventDefault(); // Prevent any default action if it were a link
                 let text = $(this).find('span').text().trim(); // Get the text to copy
                 let $button = $(this); // Reference the clicked element

                 if (!text) { // Do nothing if text is empty
                     console.warn("Copy clicked, but no text found.");
                     return;
                 }

                 if ($button.hasClass('block-click')) {
                     return;
                 }
                 $button.addClass('block-click');

                 if (navigator.clipboard && typeof navigator.clipboard.writeText === 'function') {
                      navigator.clipboard.writeText(text).then(() => {
                         alertMess('Copy successful!', $button); // Pass the button to unblock later
                     }).catch(err => {
                         console.error('Clipboard API copy failed: ', err);
                         try {
                             var textArea = document.createElement("textarea");
                             textArea.value = text;
                             textArea.style.position = 'fixed'; // Prevent scrolling issues
                             textArea.style.opacity = '0';
                             document.body.appendChild(textArea);
                             textArea.focus(); // Focus is needed for select()
                             textArea.select();
                             let successful = document.execCommand('copy');
                             document.body.removeChild(textArea);
                             if (successful) {
                                 alertMess('Copy successful!', $button);
                             } else {
                                 throw new Error('execCommand failed');
                             }
                          } catch (fallbackErr) {
                             console.error('Fallback copy failed: ', fallbackErr);
                             alertMess('Copy failed', $button); // Unblock even if failed
                          }
                     });
                 } else {
                      try {
                        var textArea = document.createElement("textarea");
                        textArea.value = text;
                        textArea.style.position = 'fixed'; // Prevent scrolling issues
                        textArea.style.opacity = '0';
                        document.body.appendChild(textArea);
                        textArea.focus(); // Focus is needed for select()
                        textArea.select();
                        let successful = document.execCommand('copy');
                        document.body.removeChild(textArea);
                        if (successful) {
                             alertMess('Copy successful!', $button);
                         } else {
                             throw new Error('execCommand failed');
                         }
                      } catch (err) {
                        console.error('Fallback copy failed: ', err);
                        alertMess('Cannot copy', $button); // Unblock even if failed
                      }
                 }
             });

        }); // <-- End of $(document).ready()

