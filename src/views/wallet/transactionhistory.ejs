                 const statusText = (data.status == 1) ? 'Successful' : (data.status == 2) ? 'Cancelled' : 'Pending';
                 const statusColor = (data.status == 1) ? 'rgb(33, 151, 107)' : (data.status == 0) ? 'rgb(255 171 0)' : 'red';
                 const formattedMoney = Number(data.money || 0).toFixed(2);
                 return `
