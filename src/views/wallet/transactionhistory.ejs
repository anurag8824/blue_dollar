    <script>
        function formateT(params) {
            const num = Number(params);
            return (num < 10) ? "0" + num : num;
        }


        function timerJoin(params = '', addHours = 0) {
            let date;
            if (!params) { date = new Date(); }
            else {
                try {
                    const timestamp = Number(params);
                    if (!isNaN(timestamp) && timestamp > 0 && String(params).length >= 10) { // Basic check for timestamp-like value
                         date = new Date(timestamp);
                         if (isNaN(date.getTime())) {
                             date = new Date(params);
                             if (isNaN(date.getTime())) throw new Error("Invalid date string");
                         }
                    } else {
                         date = new Date(params);
                         if (isNaN(date.getTime())) throw new Error("Invalid date string");
                    }
                } catch (e) { console.error("Could not parse date:", params, e); return "Invalid Date"; }
            }

            if (!(date instanceof Date) || isNaN(date.getTime())) {
                 console.error("Invalid Date object created for:", params);
                 return "Invalid Date";
            }


            try {
                if (typeof addHours === 'number' && addHours !== 0) {
                    date.setHours(date.getHours() + addHours);
                }
            }
            catch (e) { console.error("Error setting hours:", e); return "Date Error"; }

            let years = date.getFullYear();
            let months = formateT(date.getMonth() + 1); // Month is 0-indexed
            let days = formateT(date.getDate());

            let hours24 = date.getHours();
            let ampm = hours24 >= 12 ? "PM" : "AM";
            let hours12 = hours24 % 12;
            hours12 = hours12 ? hours12 : 12; // Handle midnight (0) as 12
            let hoursFormatted = formateT(hours12);

            let minutes = formateT(date.getMinutes());
            let seconds = formateT(date.getSeconds());

             if (isNaN(years) || isNaN(months) || isNaN(days) || isNaN(hours12) || isNaN(minutes) || isNaN(seconds)) {
                 console.error("Invalid date components generated for:", params); return "Invalid Date Format";
            }
            return `${years}-${months}-${days} ${hoursFormatted}:${minutes}:${seconds} ${ampm}`;
        }


        function alertMess(text, targetElement) {
            $('.msg').remove();
            $('body').append(`<div data-v-1dcba851="" class="msg"><div data-v-1dcba851="" class="msg-content" style="">${text}</div></div>`);
            $('.msg .msg-content').addClass('v-enter-active v-enter-to');

            setTimeout(() => {
                $('.msg .msg-content').removeClass('v-enter-active v-enter-to').addClass('v-leave-active v-leave-to');
                setTimeout(() => { $('.msg').remove(); }, 300); // Match CSS transition duration
                if (targetElement && targetElement.length > 0) {
                    targetElement.removeClass('block-click');
                }
            }, 1500); // How long the message stays visible
        }

        function loadRechargeData(datas) {
            const container = $('#rechargeRecordList');
            const loadingIndicator = $('#rechargePage .Loading'); // Target specific loading indicator

            if (!Array.isArray(datas) || datas.length === 0) {
                 container.html('<div class="empty-placeholder">No Deposit Records Found</div>');
                 loadingIndicator.hide(); // Hide loading if no data
                 return;
            }

            let html = datas.map((data) => {
                 if (!data || typeof data.money === 'undefined' || typeof data.status === 'undefined' || !data.time || !data.id_order) {
                     console.warn("Skipping invalid recharge data:", data);
                     return '';
                 }
                const statusText = (data.status == 1) ? 'Success' : (data.status == 2) ? 'Cancelled' : 'Pending';
                const statusColor = (data.status == 1) ? 'rgb(107, 190, 88)' : (data.status == 0) ? 'rgb(255 171 0)' : 'red';
                const formattedMoney = Number(data.money || 0).toFixed(2);
                 return `
                <div class="rechargeh__container-content__item">
                   <div class="rechargeh__container-content__item-header">
                      <span class="recharge_tit">Deposit</span>
                       <div class="recharge_right"> <div style="color: ${statusColor}">${statusText}</div> </div>
                   </div>
                   <div class="rechargeh__container-content__item-body">
                      <div><span>Balance</span><span class="price">₹ ${formattedMoney}</span></div>
                      <div><span>Type</span><span>Epay-Paytm x QR</span></div>
                      <div><span>Time</span><span>${timerJoin(data.time)}</span></div>
                      <div><span>Order number</span><div class="order"><span >${data.id_order}</span><img src="data:image/png;base64," alt="Copy"></div></div>
                   </div>
                </div>`;
            }).join('');

            container.html(html); // Replace content
            loadingIndicator.hide(); // Hide loading indicator
        }

         function loadWithdrawalData(datas) {
             const container = $('#withdrawalRecordList');
             const loadingIndicator = $('#withdrawalPage .Loading'); // Target specific loading indicator

             if (!Array.isArray(datas) || datas.length === 0) {
                 container.html('<div class="empty-placeholder">No Withdrawal Records Found</div>');
                 loadingIndicator.hide(); // Hide loading if no data
                 return;
             }

             let html = datas.map((data)=>{
                  if (!data || typeof data.money === 'undefined' || typeof data.status === 'undefined' || !data.time || !data.id_order) {
                      console.warn("Skipping invalid withdrawal data:", data);
                      return '';
